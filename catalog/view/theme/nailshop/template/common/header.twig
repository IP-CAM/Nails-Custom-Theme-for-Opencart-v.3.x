  <link href="//fonts.googleapis.com/css?family=Open+Sans:400,400i,300,700" rel="stylesheet" type="text/css" />



  <link rel="stylesheet" href="catalog/view/theme/nailshop/assets/css/style.css">
  <link rel="stylesheet" href="catalog/view/theme/nailshop/assets/css/product.css">
  <link rel="stylesheet" href="catalog/view/theme/nailshop/assets/css/catalog.css">
  <link rel="stylesheet" href="catalog/view/theme/nailshop/assets/css/basket.css">

